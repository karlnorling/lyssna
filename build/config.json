{
  "lambda": {
    "name": "BackofficeHipchatNotification",
    "s3": {
      "bucket": "com.gilt.lambda.backoffice",
      "key": "codedeploy/notifications/app"
    },
    "description": "An Amazon SNS trigger that logs the message pushed to the SNS topic."
  },
  "configs": {
    "s3": {
      "bucket": "com.gilt.lambda.backoffice",
      "key": "codedeploy/notifications/config/"
    },
    "files": [{
      "name": "hipchat",
      "local_path": "./config/s3/hipchat.json"
    }, {
      "name": "newrelic",
      "local_path": "./config/s3/newrelic.json"
    }, {
      "name": "pagerduty",
      "local_path": "./config/s3/pagerduty.json"
    }, {
      "name": "slack",
      "local_path": "./config/s3/slack.json"
    }]
  },
  "archive": {
    "files": [
      "config/app.json",
      "lib/",
      "node_modules/",
      "notification.js",
      "package.json",
      "README.md"
    ]
  }
}